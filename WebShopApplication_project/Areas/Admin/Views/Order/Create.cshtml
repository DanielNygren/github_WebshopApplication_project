@model WebShopApplication_project.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderDateTime" class="control-label"></label>
                <input asp-for="OrderDateTime" class="form-control" />
                <span asp-validation-for="OrderDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Search Article</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Article" class="control-label"></label>
                <select asp-for="Article" class="form-control"  asp-items="ViewBag.Article"></select>
                <span asp-validation-for="Article" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select>
                    @foreach(var s in ViewBag.SeclectedArticleList)
                    {
                        <option>@s</option>
                    };
                </select>
                <span asp-validation-for="Article" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
